@page "{departmentId}"
@model RazorPageClient.Pages.Department.DepartmentDetailsModel
@{
    ViewData["Title"] = "Department Details";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Department Details</h2>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label asp-for="DepartmentDetailsViewModel.DepartmentName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.DepartmentDetailsViewModel.DepartmentName)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DepartmentDetailsViewModel.Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.DepartmentDetailsViewModel.Description)
                </div>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="DepartmentDetailsViewModel.IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.DepartmentDetailsViewModel.IsActive)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DepartmentDetailsViewModel.CreatedAtUtc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.DepartmentDetailsViewModel.CreatedAtUtc)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DepartmentDetailsViewModel.LastModifiedAtUtc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.DepartmentDetailsViewModel.LastModifiedAtUtc)
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-page="./UpdateDepartment" asp-route-departmentId="@Model.DepartmentDetailsViewModel.DepartmentId" class="btn btn-secondary">Edit</a>
        <a asp-page="./DepartmentList" class="btn btn-primary">Back to List</a>
    </div>
</div>

