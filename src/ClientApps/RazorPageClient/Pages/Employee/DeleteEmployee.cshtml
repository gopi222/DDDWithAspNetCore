@page "{employeeId:min(1)}"
@model RazorPageClient.Pages.Employee.DeleteEmployeeModel
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card">
    <div class="card-header">
        <h2 class="mb-0">Delete Employee</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <strong>Delete!</strong> Are your sure you want to delete this employee?
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.EmployeeName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.EmployeeName)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.DepartmentName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.DepartmentName)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.DateOfBirth" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.DateOfBirth)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.Email)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.PhoneNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.PhoneNumber)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.EmployeeName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.EmployeeName)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.IsActive)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.CreatedAtUtc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.CreatedAtUtc)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmployeeDetailsViewModel.LastModifiedAtUtc" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-control">
                    @Html.DisplayFor(model => model.EmployeeDetailsViewModel.LastModifiedAtUtc)
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form method="post" class="d-inline-block">
            <input type="hidden" name="EmployeeId" value="@Model.EmployeeDetailsViewModel.EmployeeId"/>
            <button type="submit" class="btn badge-danger">Delete</button>
        </form>
        <a asp-page="./EmployeeList" class="btn btn-primary">Back to List</a>
    </div>
</div>